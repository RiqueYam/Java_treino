package br.com.treinamento;

public class SwitchClass {

	public static void main(String[] args) {

		int diaDaSemana = 1;
		
		String dia = "" ;
		
		switch (diaDaSemana) {
		case 1:
			dia = "Segunda-feira";
			break;
			
		case 2:
			dia = "Terça-feira";
			break;
			
		case 3:
			dia = "Quarta-feira";
			break;
				
		case 4:
			dia = "Quinta-feira";
			break;
			
		case 5:
			dia = "Sexta-feira";
			break;
			
		case 6:
			dia = "Sábado";
			break;
			
		case 7:
			dia = "Domingo";

		default:
			dia = "Dia Inválido";
			break;
		
		System.out.println(dia);
		}
	}

}
